#ifndef TIME_H
#define TIME_H

class Time
{
  public:
    // constructor
    Time(int h, int m);
    Time(const Time &rhs);

    // accessor functions
    int getHours() const;
    int getMinutes() const;

    // mutator functions
    void setHours(int h);
    void setMinutes(int m);
    
    // overloaded operator functions
    const Time operator=(const Time &rhs); 
    Time operator +(const Time&);
    Time operator -(const Time &);
    Time operator ++();
    Time operator ++(int);
    bool operator >(const Time &);
    bool operator <(const Time &);
    bool operator ==(const Time &);    

  private:
    int hours;
    int minutes;
    
    // helper function to deal with time borders
    void simplify();
};
#endif
